
odl-cluster-data {
  akka {
    remote {
      artery {
          enabled = off
          canonical.hostname = "{{ 'api' | kolla_address(inventory_hostname) }}"
          canonical.port = {{ opendaylight_clustering_port }}
        }
      netty.tcp {
        hostname = "{{ 'api' | kolla_address(inventory_hostname) }}"
        port = {{ opendaylight_clustering_port }}
      }
    }

    cluster {
      seed-nodes = [{% for host in groups['opendaylight'] %}"akka.tcp://opendaylight-cluster-data@{{ 'api' | kolla_address(host) }}:{{ opendaylight_clustering_port }}"{% if not loop.last %},{% endif %}{% endfor %}]

      roles = [
        "{{ hostvars[inventory_hostname]['ansible_hostname'] }}"
      ]

    }

    persistence {

      journal {
        leveldb {
        }
      }
    }
  }
}
